version: '2'
services:
    myapp:
        build: .
        container_name: "blah-container
        image: blah/latest
        ports:
            - 5000:5000
            - 9000:9000
        links:
            - mongodb
        depends_on:
            - mongodb
    mongodb:
        image: mongo:latest
        container_name: "mongodb"
        environment:
          - MONGO_DATA_DIR=/data/db
          - MONGO_LOG_DIR=/dev/null
        volumes:
          - ./data/db:/data/db
        ports:
            - 27017:27017
command: mongod --smallfiles --logpath=/dev/null # --quiet
